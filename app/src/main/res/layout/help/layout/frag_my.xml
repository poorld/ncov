<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_centerInParent="true"
        android:background="@drawable/shape_radius_10dp_fff"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/c_f78207"
            android:textStyle="bold"
            android:textSize="18sp"
            android:text="关于" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:textColor="@color/c_7883ff"
            android:text="数据来源:" />

        <TextView
            android:id="@+id/open_dxy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="丁香园 https://ncov.dxy.cn/ncovh5/view/pneumonia"
            android:layout_marginTop="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:textColor="@color/c_7883ff"
            android:text="项目地址:" />

        <TextView
            android:id="@+id/open_git"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="github https://github.com/teenyda/ncov"
            android:layout_marginTop="5dp"/>


        <TextView
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/c_f74c31"
            android:text="APP所有内容，以及所提供的信息资料，均来自丁香园，本APP不保证所有信息、文本、图形、链接及其它项目的绝对准确性和完整性，故请参照使用。如您（单位或个人）认为本APP某部分内容有侵权嫌疑，敬请立即通知我们，我们将在第一时间予以更改或删除" />

        <TextView
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/c_8653fa"
            android:text="邮箱: teenyda@gmail.com" />
    </LinearLayout>

</RelativeLayout>