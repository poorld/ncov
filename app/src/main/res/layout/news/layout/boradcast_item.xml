<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="5dp"
    android:paddingRight="5dp">

    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/bc_time_before"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:textSize="14sp"
            android:textColor="@color/c_606060"
            android:text="0小时前"/>

        <TextView
            android:id="@+id/bc_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/c_afafaf"
            android:textSize="13sp"
            android:text="00-00 00:00"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <View
            android:id="@+id/broadcast_top_line"
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:layout_weight="1.2"
            android:layout_gravity="center_horizontal"
            android:background="@color/c_eeeeee"/>

        <View
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:background="@drawable/shape_point" />

        <View
            android:id="@+id/broadcast_bottom_line"
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:layout_weight="8"
            android:layout_gravity="center_horizontal"
            android:background="@color/c_eeeeee"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_radius_10dp_fff"
        android:paddingTop="5dp"
        android:paddingBottom="15dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/bc_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="---------------"
            android:textColor="@color/c_2c2c2c"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/bc_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="----"
            />

        <TextView
            android:id="@+id/bc_source"
            android:layout_gravity="right"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/c_99aaff"
            android:text="信息来源：---"/>
    </LinearLayout>

</LinearLayout>