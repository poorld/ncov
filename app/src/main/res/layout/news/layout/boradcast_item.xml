<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="5dp"
    android:paddingRight="5dp">

    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:textSize="14sp"
            android:textColor="@color/c_606060"
            android:text="1小时前"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/c_afafaf"
            android:textSize="13sp"
            android:text="2-08 10:00"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <View
            android:id="@+id/broadcast_top_line"
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:layout_weight="1.2"
            android:layout_gravity="center_horizontal"
            android:background="@color/c_eeeeee"/>

        <View
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:background="@drawable/shape_point" />

        <View
            android:id="@+id/broadcast_bottom_line"
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:layout_weight="8"
            android:layout_gravity="center_horizontal"
            android:background="@color/c_eeeeee"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_radius_10dp_fff"
        android:paddingTop="5dp"
        android:paddingBottom="15dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="贵州新增8例，累计89例"
            android:textColor="@color/c_2c2c2c"
            android:textSize="16sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2020年2月7日12—24时，全省新型冠状病毒感染的肺炎新增确诊病例8例,新增治愈出院病例0例。其中：新增确诊病例中，遵义市3例，毕节市4例，黔西南州1例。截至2月7日24时，全省累计报告新型冠状病毒感染的肺炎病例89例。目前累计追踪密切接触者1285人，已解除医学观察564人，尚在接受医学观察678人。"
            />

        <TextView
            android:layout_gravity="right"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/c_99aaff"
            android:text="信息来源：人民网"/>
    </LinearLayout>

</LinearLayout>