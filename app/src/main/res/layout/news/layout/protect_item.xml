<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:background="@drawable/shape_radius_10dp_fff">



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:background="@drawable/ic_news_bg">


            <TextView
                android:id="@+id/protect_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="电吹风对手和面部吹30秒能消毒？"
                android:textColor="@color/c_5866fa"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/protect_rumours"
                android:layout_below="@id/protect_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textColor="@color/c_2c2c2c"
                android:textSize="16sp"
                android:text="丁香医生团队辟谣：30 秒太短，真吹半小时容易受伤"/>


            <TextView
                android:layout_below="@id/protect_rumours"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/c_494949"
                android:text="杀死新型冠状病毒至少需要 56℃，30 分钟，可用于物体表面消毒等。电吹风的温度即使能达到 56℃ 甚至更高，对着手和面部持续吹 30 分钟，也容易造成烫伤等伤害。还是好好洗手，做好清洁吧。"/>

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="5dp"
                android:src="@drawable/ic_rumours"/>
        </RelativeLayout>




</LinearLayout>