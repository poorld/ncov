<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:background="@drawable/shape_radius_10dp_fff">



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:background="@drawable/shape_home_gradient_6">


            <TextView
                android:id="@+id/rumour_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="---"
                android:textColor="@color/c_5866fa"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/protect_rumours"
                android:layout_below="@id/rumour_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textColor="@color/c_2c2c2c"
                android:textSize="16sp"
                android:text="---"/>


            <TextView
                android:id="@+id/rumour_answer"
                android:layout_below="@id/protect_rumours"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/c_494949"
                android:text="---"/>

            <ImageView
                android:id="@+id/rumour_iv"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="5dp"
                android:src="@drawable/ic_rumours"/>
        </RelativeLayout>




</LinearLayout>