<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:background="@drawable/shape_home_gradient_5"
    android:layout_marginTop="15dp">

    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingLeft="30dp"
        android:paddingRight="30dp">

        <TextView
            android:id="@+id/query_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="无锡"
            android:textSize="17sp"
            android:textColor="@color/c_4c55a6"
            android:padding="2dp"/>



        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_arrow"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/query_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="成都"
            android:textSize="17sp"
            android:textColor="@color/c_fed4c7"
            android:padding="2dp"/>




    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">
        <TextView
            android:id="@+id/query_start_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="01/29 00:00:00"
            android:textSize="13sp"
            android:textColor="@color/c_4c55a6"/>

        <TextView
            android:id="@+id/query_end_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="01/29 23:59:59"
            android:textSize="13sp"
            android:textColor="@color/c_fed4c7"/>

    </RelativeLayout>

    <View
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:background="@drawable/shape_dotted_line"
        android:layerType="software"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="left">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/c_4c55a6"
                android:text="车次/车牌/航班/场所名"/>

            <TextView
                android:id="@+id/query_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/c_4c55a6"
                android:text="CZ2732"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="right">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/c_fed4c7"
                android:text="出行类型"/>

            <TextView
                android:id="@+id/query_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/c_fed4c7"
                android:text="飞机"/>
        </LinearLayout>

    </LinearLayout>



</LinearLayout>